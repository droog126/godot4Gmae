{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "删除log文件",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Get-ChildItem -Path path/to/your/logs -Filter 'godot.windows.editor.x86_64.mono.*.log' | Remove-Item -Force"
            ],
            "windows": {
                "options": {
                    "env": {
                        "path/to/your/logs": "${workspaceFolder}/path_to_logs_folder"
                    }
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}